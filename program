function palindrome(str) {
  // Good luck!
str = str.replace(/[.,\/#!$%\^&\*;:{}=\-_`~()]/g,"");
  
 str=  str.replace(/ /g,"");
 
 
 
  
  str = str.toLowerCase();

  var arr = str.split("");
 
   arr.reverse();
  var str2 = arr.join("");
  
  if(str === str2){return true;}
  else{return false;}
  
  
  
  
  
}
